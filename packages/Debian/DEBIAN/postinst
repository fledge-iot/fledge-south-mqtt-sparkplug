##--------------------------------------------------------------------
##
## @postinst DEBIAN/postinst
## This script is used to execute post installation tasks.
##
## Author: Ashish Jabble
##
##--------------------------------------------------------------------

set -e

install_deps () {
    pip3 install -Ir /usr/local/foglamp/python/requirements-mqtt_sparkplug.txt --no-cache-dir
}

set_files_ownership () {
    chown -R root:root /usr/local/foglamp/python/foglamp/plugins/south/mqtt_sparkplug
}

install_deps
set_files_ownership
echo "MQTT Sparkplug south plugin is installed."
